    <script>
        function avaliar(publicacaoId, nota) {
            const estrelas = document.querySelectorAll(`#publicacao-${publicacaoId} .star`);
            estrelas.forEach((estrela, index) => {
                if (index < nota) {
                    estrela.classList.add('active');
                } else {
                    estrela.classList.remove('active');
                }
            });
            console.log(`Publicação ${publicacaoId} avaliada com ${nota} estrela(s).`);
        }

        function adicionarComentario(publicacaoId) {
            const inputComentario = document.getElementById(`comentario-${publicacaoId}`);
            const listaComentarios = document.getElementById(`lista-comentarios-${publicacaoId}`);

            if (inputComentario.value.trim() !== "") {
                const novoComentario = document.createElement("li");
                novoComentario.textContent = inputComentario.value;
                listaComentarios.appendChild(novoComentario);
                inputComentario.value = "";
            } else {
                alert("Por favor, insira um comentário.");
            }
        }
    </script>

